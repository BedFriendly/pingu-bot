{
  "name": "pingu-bot",
  "version": "0.1.0",
  "private": true,
  "description": "Discord entertainment bot for small servers",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop pingu-bot",
    "pm2:restart": "pm2 restart pingu-bot",
    "pm2:logs": "pm2 logs pingu-bot"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js",
    "typescript",
    "entertainment"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "pm2": "^6.0.14"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
